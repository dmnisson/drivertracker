@model DriverTracker.Models.Analyst

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Analyst</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserIDString" class="control-label"></label>
                <input asp-for="UserIDString" class="form-control" />
                <span asp-validation-for="UserIDString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMSNumber" class="control-label"></label>
                <input asp-for="SMSNumber" class="form-control" />
                <span asp-validation-for="SMSNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountStatus" class="control-label"></label>
                <input asp-for="AccountStatus" class="form-control" />
                <span asp-validation-for="AccountStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ReceivesSMSAlertsNewDrivers" /> @Html.DisplayNameFor(model => model.ReceivesSMSAlertsNewDrivers)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ReceivesSMSAlertsDriversTerminated" /> @Html.DisplayNameFor(model => model.ReceivesSMSAlertsDriversTerminated)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ReceivesSMSAlertsLongDriverWaits" /> @Html.DisplayNameFor(model => model.ReceivesSMSAlertsLongDriverWaits)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SMSAlertDriverWaitTime" class="control-label"></label>
                <input asp-for="SMSAlertDriverWaitTime" class="form-control" />
                <span asp-validation-for="SMSAlertDriverWaitTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
